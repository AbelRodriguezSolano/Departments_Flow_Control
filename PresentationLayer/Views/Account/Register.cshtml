@model PresentationLayer.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar";
}

<div class="row justify-content-center mt-5">
    <div class="col-12 col-md-6 text-center">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2>@ViewBag.Title</h2>
            <hr />
            <div class="form-group">
                <div class="col">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Correo Electrónico" })
                </div>
            </div>
            <div class="form-group">
                <div class="col">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                </div>
            </div>
            <div class="form-group">
                <div class="col">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Repetir Contraseña" })
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col">
                    <input type="submit" class="btn btn-primary btn-block" value="Registar" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
